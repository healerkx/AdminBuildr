<style>
    .AdvancedSearch .chzn-container .chzn-results li {
        display: list-item;
    }

</style>

<div class="form-horizontal">
    <span>Forms Creator</span>

    <form>
        <input type="hidden" name="__pager_current"/>
    </form>
    <br>
    <!-- Advanced search input -->
    <div class="control-group">
        <div class="AdvancedSearch">
            <label class="control-label">##label</label>
            <div class="controls" widget-class='AdvancedSearch'>
                <select name='##field_name' search-table='kx_admin_user' search-field='username'
                        class="span6 chosen" data-placeholder="选择一条记录" tabindex="1">
                    <option class='default-option' value="0">请选择</option>
                </select>
            </div>
        </div>
    </div>


    <div class="control-group">
        {{ text_field("tagType":"abTag", 'label':'用户名', 'field':'username', 'value':'1') }}
    </div>
    <div class="control-group">
        {{ text_field("tagType":"abTag", 'label':'提交', 'field':'commit', 'value':'2') }}
    </div>

    <div class="control-group">
        {{ tag_html('file_upload', ['label':'简历', 'upload_url':'bbb', 'field':'resume']) }}
    </div>

    {% if show_pager is defined and show_pager == true%}
    {% include "common/pager.phtml" %}
    {% endif %}
</div>