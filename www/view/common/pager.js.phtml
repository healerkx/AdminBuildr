<script>

    $(function () {
        var pager = $('div.pager');
        pager.delegate('li a', 'click', function(){
            pageTo($(this).attr('page'));
        });

        pager.delegate('input', 'keypress', function(e) {
            if (e.keyCode == 13) {
                var page = $(this).val();
                pageTo(page);
            }
        });
    });
</script>